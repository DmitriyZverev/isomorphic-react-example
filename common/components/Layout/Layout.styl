@import url('https://fonts.googleapis.com/css?family=Arvo')

*,
*:before,
*:after
    box-sizing border-box

body
    margin 0
    font-size 18px
    color $color_font
    line-height 1.3
    font-family Arvo, serif
    background-image url('./background.svg')
    overflow-y scroll

.container
    width 1000px
    min-height calc(100vh - 96px)
    margin 16px auto
    padding 16px
    background white
    border 1px solid $color_grey
    border-radius 16px

.header
    display flex
    justify-content center

.slogan
    margin-left 16px

.name
    font-weight bold
    font-size 30px
    line-height 30px
    color $color_grey_dark

.descr
    font-size 20px
    line-height 28px
    text-align end
    letter-spacing 4px
    color $color_red

.hr
    border none
    height 1px
    margin 16px 0
    background $color_grey

.footer
    display flex
    justify-content center
    margin 16px

.githubLogo
    display block
    cursor pointer
    width 48px
    height 48px

    svg
        transition .3s
        fill #96949e

    &:hover

        svg
            fill $color_red