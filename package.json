{
  "name": "isomorphic-react-skeleton",
  "version": "0.1.0",
  "private": true,
  "author": {
    "name": "Dmitriy Zverev",
    "email": "zver.lockon@mail.ru"
  },
  "license": "MIT",
  "engines": {
    "node": ">=7.6"
  },
  "scripts": {
    "start": "bin/start",
    "build": "bin/build",
    "watch": "bin/watch",
    "eslint": "eslint .",
    "test": "jest"
  },
  "dependencies": {
    "assets-webpack-plugin": "^3.5.1",
    "autoprefixer": "^7.1.2",
    "babel-loader": "^7.1.1",
    "babel-plugin-css-modules-transform": "^1.2.7",
    "babel-polyfill": "^6.23.0",
    "babel-preset-env": "^1.6.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "babel-register": "^6.24.1",
    "css-loader": "^0.28.4",
    "extract-text-webpack-plugin": "^3.0.0",
    "file-loader": "^0.11.2",
    "fs-extra": "^4.0.0",
    "koa": "^2.3.0",
    "postcss-loader": "^2.0.6",
    "prop-types": "^15.5.10",
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "react-redux": "^5.0.5",
    "react-router-dom": "^4.1.2",
    "redux": "^3.7.2",
    "redux-thunk": "^2.2.0",
    "style-loader": "^0.18.2",
    "stylus": "^0.54.5",
    "stylus-loader": "^3.0.1",
    "webpack": "^3.3.0",
    "webpack-node-externals": "^1.6.0"
  },
  "devDependencies": {
    "babel-eslint": "^7.2.3",
    "eslint": "^4.2.0",
    "eslint-config-revva": "^0.5.0",
    "eslint-plugin-react": "^7.1.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^20.0.4",
    "koa-mount": "^3.0.0",
    "koa-static": "^4.0.1",
    "koa-webpack-middleware": "^1.0.5",
    "react-hot-loader": "next",
    "redbox-react": "^1.4.3",
    "redux-devtools-extension": "^2.13.2"
  },
  "babel": {
    "presets": [
      "react",
      "stage-0",
      [
        "env",
        {
          "targets": {
            "node": "current"
          }
        }
      ]
    ]
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": "revva/react",
    "globals": {
      "__PRELOADED_STATE__": true
    }
  },
  "eslintIgnore": [
    "build"
  ],
  "jest": {
    "moduleDirectories": [
      "node_modules",
      "common"
    ],
    "roots": [
      "test"
    ],
    "moduleNameMapper": {
      "^.*[.](css|styl)$": "identity-obj-proxy",
      "^.*[.](png|jpeg|jpg|svg)$": "<rootDir>/test/stubs/fileStub.js"
    },
    "collectCoverageFrom": [
      "client/**/*",
      "common/**/*",
      "server/**/*"
    ],
    "coverageDirectory": "<rootDir>/coverage"
  }
}
